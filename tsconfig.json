{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es6"],
        "allowJs": false,
        "target": "es6",
        "removeComments": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "rootDir": "."
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "typeAcquisition": {
        "enable": true
    }
}