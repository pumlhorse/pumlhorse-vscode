{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es2015"],
        "allowJs": false,
        "target": "es5",
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out"
    },
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [
        "node_modules"
    ]
}